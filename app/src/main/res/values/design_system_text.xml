<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Points.UI.Widget.Text.TextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/size_14</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/roboto_regular_400</item>
    </style>

    <style name="Points.UI.Widget.Text.TextAppearance.Main.Small">
        <item name="android:textSize">@dimen/size_12</item>
        <item name="lineHeight">@dimen/space_16</item>
    </style>

    <style name="Points.UI.Widget.Text.TextAppearance.Main">
        <item name="lineHeight">@dimen/space_24</item>
    </style>

    <style name="Points.UI.Widget.Text.TextAppearance.Medium">
        <item name="android:fontFamily">@font/roboto_medium_500</item>
        <item name="lineHeight">@dimen/space_24</item>
    </style>

    <style name="Points.UI.Widget.Text.TextAppearance.Bold">
        <item name="android:textSize">@dimen/size_24</item>
        <item name="android:fontFamily">@font/roboto_bold_700</item>
        <item name="lineHeight">@dimen/space_32</item>
    </style>

    <style name="Points.UI.Widget.Text.TextAppearance.Bold.Small">
        <item name="lineHeight">@dimen/space_24</item>
        <item name="android:textSize">@dimen/size_20</item>
    </style>


</resources>